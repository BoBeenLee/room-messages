{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@room-messages/features-chat-room": [
        "libs/features/chat-room/src/index.ts"
      ],
      "@room-messages/features-chat-room-message": [
        "libs/features/chat-room-message/src/index.ts"
      ],
      "@room-messages/shared-apis": ["libs/shared/apis/src/index.ts"],
      "@room-messages/shared-hooks": ["libs/shared/hooks/src/index.ts"],
      "@room-messages/shared-libs": ["libs/shared/libs/src/index.ts"],
      "@room-messages/shared-stores": ["libs/shared/stores/src/index.ts"],
      "@room-messages/shared-ui-components": [
        "libs/shared/ui-components/src/index.tsx"
      ],
      "@room-messages/shared-utils": ["libs/shared/utils/src/index.ts"],
      "@room-messages/shared/hooks": ["libs/shared/hooks/src/index.ts"],
      "@room-messages/shared/interfaces": ["libs/shared/interfaces/src/index.ts"]
    }
  },
  "files": ["./types/global.d.ts"],
  "exclude": ["node_modules", "tmp"]
}
